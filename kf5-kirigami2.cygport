inherit kf5

NAME="kf5-kirigami2"
VERSION=2.2.0
RELEASE=1
CATEGORY="KDE"
SUMMARY="KDE portable application UI framework"
DESCRIPTION="Kirigami is KDEâ€™s lightweight user interface framework for mobile
and convergent applications. It allows Qt developers to easily create applications
that run on most major mobile and desktop platforms without modification."
SRC_URI="mirror://kde/stable/kirigami/kirigami2-${VERSION}.tar.xz"
SRC_DIR="kirigami2-${VERSION}"

PKG_NAMES="${NAME} ${NAME}-devel"
kf5_kirigami2_REQUIRES="qt5-quickcontrols2 breeze-icons"
kf5_kirigami2_CONTENTS="
